<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation="
            http://www.ehcache.org/v3 https://www.ehcache.org/schema/ehcache-core-3.0.xsd
            http://www.ehcache.org/v3/jsr107 https://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">

    <service>
        <jsr107:defaults enable-management="true" enable-statistics="true"/>
    </service>

    <cache-template name="simple">
        <expiry>
            <ttl unit="minutes">2</ttl>
        </expiry>
    </cache-template>

    <cache alias="com.kuuhaku.model.persistent.guild.GuildConfig" uses-template="simple"/>
    <cache alias="com.kuuhaku.model.persistent.guild.GuildSettings" uses-template="simple"/>
    <cache alias="com.kuuhaku.model.persistent.user.Profile" uses-template="simple"/>
    <cache alias="com.kuuhaku.model.persistent.user.ProfileSettings" uses-template="simple"/>
    <cache alias="com.kuuhaku.model.persistent.user.Account" uses-template="simple"/>
    <cache alias="com.kuuhaku.model.persistent.user.AccountSettings" uses-template="simple"/>
    <cache alias="com.kuuhaku.model.persistent.user.AccountTitle" uses-template="simple"/>
    <cache alias="com.kuuhaku.model.persistent.shiro.Card" uses-template="simple"/>
    <cache alias="com.kuuhaku.model.persistent.shiro.Anime" uses-template="simple"/>
    <cache alias="com.kuuhaku.model.persistent.shiro.GlobalProperty" uses-template="simple"/>
    <cache alias="com.kuuhaku.model.persistent.user.DynamicProperty" uses-template="simple"/>
    <cache alias="com.kuuhaku.model.persistent.guild.CustomAnswer" uses-template="simple"/>
</config>