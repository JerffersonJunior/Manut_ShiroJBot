<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="main">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- SHIRO -->
        <class>com.kuuhaku.model.persistent.shiro.Anime</class>
        <class>com.kuuhaku.model.persistent.shiro.Card</class>
        <class>com.kuuhaku.model.persistent.shiro.GlobalProperty</class>
        <class>com.kuuhaku.model.persistent.shiro.Giftcode</class>
        <class>com.kuuhaku.model.persistent.shiro.ScriptMetrics</class>

        <!-- GUILD -->
        <class>com.kuuhaku.model.persistent.guild.GoodbyeSettings</class>
        <class>com.kuuhaku.model.persistent.guild.GuildConfig</class>
        <class>com.kuuhaku.model.persistent.guild.GuildSettings</class>
        <class>com.kuuhaku.model.persistent.guild.LevelRole</class>
        <class>com.kuuhaku.model.persistent.guild.WelcomeSettings</class>
        <class>com.kuuhaku.model.persistent.guild.StarredMessage</class>
        <class>com.kuuhaku.model.persistent.guild.CustomAnswer</class>
        <class>com.kuuhaku.model.persistent.guild.AutoRule</class>

        <!-- USER -->
        <class>com.kuuhaku.model.persistent.user.Account</class>
        <class>com.kuuhaku.model.persistent.user.AccountSettings</class>
        <class>com.kuuhaku.model.persistent.user.DynamicProperty</class>
        <class>com.kuuhaku.model.persistent.user.UserItem</class>
        <class>com.kuuhaku.model.persistent.user.LocalizedItem</class>
        <class>com.kuuhaku.model.persistent.user.Kawaipon</class>
        <class>com.kuuhaku.model.persistent.user.KawaiponCard</class>
        <class>com.kuuhaku.model.persistent.user.Profile</class>
        <class>com.kuuhaku.model.persistent.user.ProfileSettings</class>
        <class>com.kuuhaku.model.persistent.user.Transaction</class>
        <class>com.kuuhaku.model.persistent.user.StashedCard</class>
        <class>com.kuuhaku.model.persistent.user.AccessToken</class>
        <class>com.kuuhaku.model.persistent.user.Title</class>
        <class>com.kuuhaku.model.persistent.user.AccountTitle</class>
        <class>com.kuuhaku.model.persistent.user.LocalizedTitle</class>
        <class>com.kuuhaku.model.persistent.user.Warn</class>
        <class>com.kuuhaku.model.persistent.user.MarketOrder</class>
        <class>com.kuuhaku.model.persistent.user.Reminder</class>
        <class>com.kuuhaku.model.persistent.user.SBreachLeaderboard</class>

        <!-- SHOUKAN -->
        <class>com.kuuhaku.model.persistent.shoukan.Deck</class>
        <class>com.kuuhaku.model.persistent.shoukan.Evogear</class>
        <class>com.kuuhaku.model.persistent.shoukan.Field</class>
        <class>com.kuuhaku.model.persistent.shoukan.Senshi</class>
        <class>com.kuuhaku.model.persistent.shoukan.LocalizedDescription</class>
        <class>com.kuuhaku.model.persistent.shoukan.LocalizedString</class>
        <class>com.kuuhaku.model.persistent.shoukan.MatchHistory</class>
        <class>com.kuuhaku.model.persistent.shoukan.Archetype</class>
        <class>com.kuuhaku.model.persistent.shoukan.LocalizedArch</class>
        <class>com.kuuhaku.model.persistent.shoukan.SlotSkin</class>
        <class>com.kuuhaku.model.persistent.shoukan.LocalizedSkin</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.schema-generation.create-database-schemas" value="true"/>

            <property name="hibernate.jdbc.batch_size" value="10"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
            <property name="hibernate.show_sql" value="false"/>

            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.region.factory_class" value="jcache"/>
            <property name="hibernate.javax.cache.provider" value="org.ehcache.jsr107.EhcacheCachingProvider"/>

            <property name="hibernate.hikari.maximumPoolSize" value="100"/>
            <property name="hibernate.hikari.idleTimeout" value="1000"/>
            <property name="hibernate.hikari.connectionTimeout" value="30000"/>
            <property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>
            <property name="unreturnedConnectionTimeout" value="30"/>
            <property name="debugUnreturnedConnectionStackTraces" value="true"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.connection.characterEncoding" value="utf8"/>
            <property name="hibernate.connection.useUnicode" value="true"/>
            <property name="hibernate.connection.charSet" value="UTF-8"/>
        </properties>
    </persistence-unit>
</persistence>
